@model List<Restaurant_QKA.Models.Coupon>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="billboard container-fluid" style="width:1300px">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <!-- Tiêu đề và mô tả -->
                    <div>
                        <h4 class="card-title">Coupont List</h4>
                        <p class="card-description text-muted">Overview of all coupons</p>
                    </div>
                    <!-- Nút thêm sản phẩm mới -->
                    <div>
                        <button type="button" class="btn btn-warning newCoupontButton" id="newCoupontButton">
                            New Coupon
                        </button>
                    </div>
                </div>

                <!-- Thanh tìm kiếm -->
                <div class="d-flex justify-content-between mb-4">
                    <!-- Tìm kiếm coupont -->
                    <div class="search-container" style="width:30%">
                        <form class="search-form d-flex align-items-center" method="get" action="@Url.Action("Search","Coupont")">
                            <input type="search" class="form-control" name="query" placeholder="Search coupons..." title="Search here">
                        </form>
                    </div>
                </div>
                <!-- Bảng danh sách coupont  -->
                <div class="table-responsive" style="width: 1200px">
                    <!-- Tiêu đề bảng -->
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Coupont Name</th>
                                <th>Value</th>
                                <th>Status</th>
                                <th>Created Date</th>
                                <th>Created Manager</th>
                                <th>Thao Tác</th>
                            </tr>
                        </thead>
                        <!-- Giá trị từng dòng -->
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="max-width: 150px; word-wrap: break-word;">@item.Name</td>
                                    <td>@item.Value</td>
                                    <td>
                                        @if (item.StatusCoupon == true)
                                        {
                                            <p class="text-success">Hoạt động</p>
                                        }
                                        else
                                        {
                                            <p class="text-danger">Không Hoạt động</p>
                                        }
                                    </td>
                                    <td>@item.CreatedDate.ToString()</td>
                                    <td>@item.CreatedManagerID</td>
                                    <!-- Các nút action -->
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.CouponID },
                                                                         new
                                                                         {
                                                                             @class = "btn btn-warning editCoupontButton",
                                                                             @data_id = item.CouponID,
                                                                             id = "editCoupontButton"
                                                                         })
                                        @Html.ActionLink("Delete", "Delete", new { id = item.CouponID },
                                                                             new
                                                                             {
                                                                                 @class = "btn btn-danger deleteCoupontButton",
                                                                                 @data_id = item.CouponID,
                                                                                 id = "deleteCoupontButton"
                                                                             })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- Phân trang -->
                    @*<div class="pagination-container">
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, ViewBag.Categories }))
                        </div>*@
                </div>
            </div>
        </div>
    </div>
</section>

@*Tạo Modal cho chung cho form (Create, Edit, Delete)*@
<!-- Modal Create Product -->
<div class="modal fade" id="CoupontModal" tabindex="-1" aria-labelledby="CoupontModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modaCoupontLabel">Title Modal</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Nội dung form tạo sản phẩm sẽ được load vào đây -->
                <div id="modalCoupontContent">
                    Loading...
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

