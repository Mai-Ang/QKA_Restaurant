@model IEnumerable<Restaurant_QKA.Models.MenuItem>
@{
    ViewBag.Title = "Search";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="billboard container-fluid" style="width:1200px">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <!-- Tiêu đề và mô tả -->
                    <div>
                        <h4 class="card-title">Danh Sách Món</h4>
                        <p class="card-description text-muted text-success">Sản phẩm với từ khóa tìm kiếm: @ViewBag.Query</p>
                    </div>
                    <!-- Nút thêm sản phẩm mới -->
                    <div>
                        <button type="button" class="btn btn-warning newProductButton" id="newProductButton">
                            Tạo Mới Món
                        </button>
                    </div>
                </div>

                <!-- Thanh tìm kiếm và chọn danh mục -->
                <div class="d-flex justify-content-between mb-4">
                    <!-- Tìm kiếm sản phẩm -->
                    <div class="search-container">
                        <form class="search-form d-flex align-items-center" method="get" action="@Url.Action("Search","Products")">
                            <input type="search" class="form-control" name="query" placeholder="Search products..." title="Search here">
                            <i class="mdi mdi-magnify icon-search"></i>
                        </form>
                    </div>

                    <!-- Chọn danh mục -->
                    <div class="dropdown">
                        <a class="btn btn-outline-dark dropdown-toggle" id="categoryDropdown" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                            Select Category
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="categoryDropdown">
                            @if (ViewBag.Categories != null)
                            {
                                foreach (var category in ViewBag.Categories)
                                {
                                    <a class="dropdown-item" href="@Url.Action("ProductsByCategory", "Products", new { CategoryID = category.CategoryID})">@category.Name</a>
                                }
                            }
                            else
                            {
                                <a class="dropdown-item disabled">Không tìm thấy danh mục để hiển thị</a>
                            }
                        </div>
                    </div>
                </div>
                <!-- Bảng danh sách sản phẩm  -->
                <div class="table-responsive">

                    @if (!Model.Any())
                    {
                        <p>No suitable products found</p>
                    }
                    else
                    {
                        <!-- Tiêu đề bảng -->
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Tên Món</th>
                                    <th>Hình Ảnh</th>
                                    <th>Mô Tả</th>
                                    <th>Giá Bán</th>
                                    <th>Số Lượng</th>
                                    <th>Trạng Thái</th>
                                    <th>Ngày Tạo</th>
                                    <th>Thao Tác</th>
                                </tr>
                            </thead>
                            <!-- Giá trị từng dòng -->
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="max-width: 150px; word-wrap: break-word;">@item.Name</td>
                                        <td class="py-md">
                                            <img src="@Url.Content("~/Content/Images/Products_Img/" + item.ImageUrl)" alt="Product Image" style="width: 100px; height: 100px; object-fit: cover; border-radius: 5px;" />
                                        </td>
                                        <td style="max-width: 200px; word-wrap: break-word; white-space: normal;">@item.Description</td>
                                        <td>@item.Price</td>
                                        <td>
                                            @if (item.Quantity < 10)
                                            {
                                                <span class="badge bg-warning">@item.Quantity</span>
                                            }
                                            else
                                            {
                                                <span>@item.Quantity</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.IsActive == true)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactive</span>
                                            }
                                        </td>
                                        <td>@item.CreatedDate.ToString()</td>
                                        <!-- Các nút action -->
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.ItemID },
                                                                             new
                                                                             {
                                                                                 @class = "btn btn-warning editProductButton",
                                                                                 @data_id = item.ItemID,
                                                                                 id = "editProductButton"
                                                                             })
                                            @Html.ActionLink("Delete", "Delete", new { id = item.ItemID },
                                                                                 new
                                                                                 {
                                                                                     @class = "btn btn-danger deleteProductButton",
                                                                                     @data_id = item.ItemID,
                                                                                     id = "deleteProductButton"
                                                                                 })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>

</section>

@*Tạo Modal cho chung cho form (Create, Edit)*@
<!-- Modal Create Product -->
<div class="modal fade" id="ProductModal" tabindex="-1" aria-labelledby="ProductModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalProductLabel">Title Modal</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Nội dung form tạo sản phẩm sẽ được load vào đây -->
                <div id="modalProductContent">
                    Loading...
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

