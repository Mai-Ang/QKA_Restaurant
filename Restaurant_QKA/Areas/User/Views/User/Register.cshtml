@model Restaurant_QKA.Models.Customer

@{
    ViewBag.Title = "Register";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<section class="login-section py-5" style="background-color: #eee; margin-top: 100px">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-12 text-center">
                                <p class="h1 fw-bold mb-4 rounded-5 text-bg-primary">Đăng ký</p>

                                @if (ViewBag.Mess != null)
                                {
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <strong>Lỗi:</strong> @ViewBag.Mess
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                    </div>
                                }
                                <div class="col-md-6 order-2 order-lg-1">
                                    <form class="mx-1 mx-md-2" method="post">
                                        @Html.AntiForgeryToken()

                                        <!-- Họ tên -->
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="Name">Họ tên</label>
                                                <input type="text" id="Name" name="Name" class="form-control" required />
                                            </div>
                                        </div>

                                        <!-- Tài khoản -->
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="UserName">Tài khoản</label>
                                                <input type="text" id="UserName" name="UserName" class="form-control" required />
                                            </div>
                                        </div>

                                        <!-- Mật khẩu -->
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="HashPass">Mật khẩu</label>
                                                <input type="password" id="HashPass" name="HashPass" class="form-control" required />
                                            </div>
                                        </div>

                                        <!-- Email -->
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="Email">Email</label>
                                                <input type="email" id="Email" name="Email" class="form-control" required />
                                            </div>
                                        </div>

                                        <!-- Địa chỉ -->
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-home fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="Address">Địa chỉ</label>
                                                <input type="text" id="Address" name="Address" class="form-control" />
                                            </div>
                                        </div>

                                        <!-- Điện thoại -->
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-phone fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="Phone">Điện thoại</label>
                                                <input type="text" id="Phone" name="Phone" class="form-control" />
                                            </div>
                                        </div>

                                        <!-- Ngày sinh -->
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-calendar-alt fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="DateOfBirth">Ngày sinh</label>
                                                <input type="date" id="DateOfBirth" name="DateOfBirth" class="form-control" />
                                            </div>
                                        </div>

                                        <!-- Đồng ý điều khoản -->
                                        <div class="form-check d-flex justify-content-center mb-5">
                                            <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" />
                                            <p> Tôi đồng ý với </p><a href="#!"> Điều khoản dịch vụ</a>
                                            <label class="form-check-label" for="form2Example3">
                                            </label>
                                        </div>

                                        <!-- Nút đăng ký -->
                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                            <button type="submit" class="btn btn-primary btn-block col-md-12">Đăng ký</button>
                                        </div>

                                    </form>
                                </div>
                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                     class="img-fluid" alt="Sample image">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

