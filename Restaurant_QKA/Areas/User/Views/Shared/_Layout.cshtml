<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- Libraries Stylesheet -->
    <link href="~/Content/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="~/Content/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">


    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/Content/css/style.css" rel="stylesheet">
</head>
<body  style="background-color: #ffffff ">

    <!-- Spinner Start -->
    <div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>
    <!-- Spinner End -->
    <!-- Navbar start -->
    <div class="container-fluid fixed-top rounded-bottom">
        <div class="container topbar bg-primary d-none d-lg-block" style="background-color: #DA8359">
            <div class="d-flex justify-content-between">
                <div class="top-info ps-2">
                    <small class="me-3"><i class="fas fa-map-marker-alt me-2 text-secondary"></i> <a href="#" class="text-white">Trần Văn Ơn, Phú Hòa, TPTDM, Bình Dương</a></small>
                    <small class="me-3"><i class="fas fa-envelope me-2 text-secondary"></i><a href="#" class="text-white">qkarestaurant@gmail.com.vn</a></small>
                </div>
                <div class="top-link pe-2">
                    <a href="#" class="text-white"><small class="text-white mx-2">Quyền Riêng Tư</small>/</a>
                    <a href="#" class="text-white"><small class="text-white mx-2">Điều Khoản Sử Dụng</small>/</a>
                    <a href="#" class="text-white"><small class="text-white ms-2">Chính Sách Hoàn Tiền</small></a>
                </div>
            </div>
        </div>
        <div class="container px-0">
            <nav class="navbar navbar-light bg-white navbar-expand-xl">
                <a href="@Url.Action("Index", "Home")" class="navbar-brand"><h1 class="text-primary display-6">Seft_Restaurant</h1></a>
                <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars text-primary"></span>
                </button>
                <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                    <div class="navbar-nav mx-auto">
                        <a href="@Url.Action("Index","Home")" class="nav-item nav-link active">Trang Chủ</a>
                        <a href="@Url.Action("Index","Menu")" class="nav-item nav-link">Menu</a>
                        <a href="@Url.Action("Contact","Home")" class="nav-item nav-link">Liên Hệ</a>
                    </div>
                    <div class="d-flex align-items-center m-3 me-0">
                        <!-- Nút tìm kiếm -->
                        @*<button class="btn-search btn border border-secondary btn-md-square rounded-circle bg-white me-4" data-bs-toggle="modal" data-bs-target="#searchModal">
                            <i class="fas fa-search text-primary"></i>
                        </button>*@

                        <!-- Giỏ hàng -->
                        @if (Session["UserID"] != null)
                        {
                            <a href="@Url.Action("Index", "Carts", new { area = "User" })" class="position-relative me-4 d-flex align-items-center">
                                <i class="fa-solid fa-cart-shopping fa-flip-horizontal fa-xl"></i>
                                @if (@ViewBag.TotalItemsInCart == null)
                                {
                                    <span class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1" style="top: -10px; left: 17px; height: 20px; min-width: 20px;">@ViewBag.TotalItemsInCart</span>
                                }
                            </a>
                        }

                        <!-- Tài khoản người dùng -->
                        <div class="nav-item dropdown d-flex align-items-center">
                            <a href="@Url.Action("Login", "User")">
                                <i class="fa-solid fa-user fa-xl"></i>
                            </a>
                            @if (Session["UserID"] != null)
                            {
                                <div class="dropdown-menu m-0 bg-secondary rounded-0">
                                    <a href="" class="dropdown-item">Thông Tin</a>
                                    <a href="@Url.Action("Logout", "User")" class="dropdown-item">Đăng Xuất</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <!-- Navbar End -->
    <!-- Modal Search Start -->
    @*<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen">
            <div class="modal-content rounded-0">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Tìm Kiếm Món</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex align-items-center">
                    <div class="input-group w-75 mx-auto d-flex">
                        <input type="search" class="form-control p-3" placeholder="Hãy Nhập Vào Từ Khóa Tìm Kiếm" aria-describedby="search-icon-1">
                        <span id="search-icon-1" class="input-group-text p-3"><i class="fa fa-search"></i></span>
                    </div>
                </div>
            </div>
        </div>
    </div>*@
    <!-- Modal Search End -->

    <!-- Body -->
    <div class="container-fluid fruite py-5" style="margin-top:0px">
        <div class="container py-0">
            @RenderBody()
        </div>    
    </div>
    
    <!-- Body -->

    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-white-50 footer pt-5 mt-5 ">
        <div class="container py-5">
            <div class="pb-4 mb-4" style="border-bottom: 1px solid rgba(226, 175, 24, 0.5) ;">
                <div class="row g-4">
                    <div class="col-lg-3">
                        <a href="#">
                            <h1 class="text-primary mb-0">Seft_Restaurant</h1>
                            <p class="text-secondary mb-0"><i class="fa-solid fa-star fa-flip"></i> Chuẩn 3 Sao Michelin</p>
                        </a>
                    </div>
                    <div class="col-lg-6">
                        <div class="position-relative mx-auto">
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="d-flex justify-content-end pt-3">
                            <a class="btn  btn-outline-secondary me-2 btn-md-square rounded-circle" href=""><i class="fab fa-twitter"></i></a>
                            <a class="btn btn-outline-secondary me-2 btn-md-square rounded-circle" href=""><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-outline-secondary me-2 btn-md-square rounded-circle" href=""><i class="fab fa-youtube"></i></a>
                            <a class="btn btn-outline-secondary btn-md-square rounded-circle" href=""><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row g-5">
                <div class="col-lg-3 col-md-6">
                    <div class="footer-item">
                        <h4 class="text-light mb-3">Về chúng tôi</h4>
                        <p class="mb-4">
                            Thành lập từ năm 2024, với tinh thần sáng tạo, đổi mới, tâm huyết, 
                            Seft_Restaurant quyết tâm đem đến cho người dùng những trãi nghiệm tuyệt vời nhất,
                            xứng đáng với chất lượng phục vụ chuẩn 3 sao Michelin.
                        </p>
                        <a href="" class="btn border-secondary py-2 px-4 rounded-pill text-primary">Tiếp tục xem</a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="d-flex flex-column text-start footer-item">
                        <h4 class="text-light mb-3">Thông Tin Chung</h4>
                        <a class="btn-link" href="">Quyền Riêng Tư</a>
                        <a class="btn-link" href="">Điều Khoản Sử Dụng</a>
                        <a class="btn-link" href="">FAQs & Help</a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    @if (Session["UserID"] != null)
                    {
                        <div class="d-flex flex-column text-start footer-item">
                            <h4 class="text-light mb-3">Tài Khoản</h4>
                            <a class="btn-link" href="">Tài Khoản Của Tôi</a>
                            <a class="btn-link" href="">Giỏ Hàng</a>
                            <a class="btn-link" href="">Lịch Sử Đặt Hàng</a>
                        </div>
                    }
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="footer-item">
                        <h4 class="text-light mb-3">Liên Hệ</h4>
                        <p>Địa chỉ: Trần Văn Ơn, Phú Hòa, TP.TDM, Bình Dương</p>
                        <p>Email: qkarestaurant@gmail.com.vn</p>
                        <p>Điện Thoại: 0866097575</p>
                        <p>Chấp Nhận Thanh Toán:</p>
                        <div class="d-flex justify-content-end pt-3">
                            <p class="btn  btn-outline-primary me-3 btn-lg-square"><i class="fa-solid fa-money-bill"></i></p>
                            <p class="btn  btn-outline-primary me-3 btn-lg-square"><i class="fa-brands fa-cc-visa"></i></p>
                            <p class="btn  btn-outline-primary me-3 btn-lg-square"><i class="fa-brands fa-cc-paypal"></i></p>
                            <p class="btn  btn-outline-primary me-3 btn-lg-square"><i class="fa-brands fa-cc-apple-pay"></i></>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->

    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/lib/easing/easing.min.js"></script>
    <script src="~/Content/lib/waypoints/waypoints.min.js"></script>
    <script src="~/Content/lib/lightbox/js/lightbox.min.js"></script>
    <script src="~/Content/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/Content/js/main.js"></script>
</body>
</html>
